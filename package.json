{
  "name": "gentryriggen.com",
  "version": "1.0.0",
  "description": "Gentry Riggen personal website",
  "main": "index.ts",
  "repository": "git@github.com:GentryRiggen/gentryriggen.com.git",
  "author": "Gentry Riggen",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.js --mode=development",
    "prebuild": "rimraf build/",
    "build": "webpack --mode=production",
    "lint": "tslint",
    "test": "jest",
    "test:e2e": "start-test start 3000 cypress:run",
    "test:pre-commit": "CI=true yarn test --findRelatedTests",
    "cypress:run": "cypress run",
    "predeploy": "yarn build",
    "deploy": "firebase deploy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint",
      "yarn test:pre-commit"
    ]
  },
  "jest": {
    "setupFiles": [
      "./src/setupTests.ts"
    ],
    "testRegex": "(^src.*/__tests__/.*|(\\.|/)(test))\\.(ts|tsx|js|jsx)$",
    "collectCoverageFrom": [
      "src/domains/**/utils/*.{ts,tsx,js}",
      "src/domains/**/selectors/*.{ts,tsx,js}",
      "src/domains/**/workflows/*.{ts,tsx,js}",
      "src/lib/**/utils/*.{ts,tsx,js}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/test/",
      "<rootDir>/build/",
      "<rootDir>/cypress/",
      "<rootDir>/public/"
    ],
    "moduleDirectories": [
      "./node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "csstype": "^2.6.5",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-animation": "^1.0.9",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "styled-components": "^4.2.0",
    "styled-system": "^4.2.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^24.0.13",
    "@types/ramda": "^0.26.9",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.3",
    "@types/styled-components": "^4.1.15",
    "@types/styled-system": "^4.2.1",
    "@types/webpack": "^4.4.32",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "cypress": "^3.3.1",
    "firebase-tools": "^6.10.0",
    "fork-ts-checker-webpack-plugin": "^1.3.4",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "source-map-loader": "^0.2.4",
    "start-server-and-test": "^1.9.1",
    "style-loader": "^0.23.1",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  }
}
