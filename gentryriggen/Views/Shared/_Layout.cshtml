<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Gentry Riggen</title>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,300,600,700' rel='stylesheet' type='text/css'>
    @Scripts.Render("~/bundles/scripts")
    @Styles.Render("~/Content/css")
</head>
<body layout-gt-md="row" layout="column" ng-app="gr" ng-cloak>
    <div ng-controller="HeaderCtrl as HeaderCtrl" layout="column">
        <!-- Side Navigation -->
        <md-sidenav class=" md-sidenav-left md-whiteframe-z2"
                    md-component-id="sideNav"
                    md-is-locked-open="$mdMedia('gt-md')"
                    flex>

            <header class="nav-header">
                <a ui-sref="blog">
                    <img src="http://cdn.gentryriggen.com/binary/gentryBoardingSmall.jpg" class="img-circle img-responsive" />
                    <h1>Gentry Riggen</h1>
                </a>
                <div class="social-links" layout="row" layout-align="center center">
                    <span flex><a href="https://twitter.com/GentryRiggen" target="#"><i class="fa fa-twitter fa-2x"></i></a></span>
                    <span flex><a href="https://github.com/GentryRiggen" target="#"><i class="fa fa-github fa-2x"></i></a></span>
                    <span flex><a href="https://linkedin.com/in/GentryRiggen/en" target="#"><i class="fa fa-linkedin fa-2x"></i></a></span>
                    <span flex><a href="http://stackoverflow.com/users/1767285" target="#"><i class="fa fa-stack-overflow fa-2x"></i></a></span>
                </div>
            </header>

            <md-content layout-padding>
                <md-list>
                    <md-list-item ui-sref-active="active" ng-click="HeaderCtrl.navigate('blog')">
                        <p>Blog</p>
                    </md-list-item>
                    <md-list-item ui-sref-active="active" ng-click="HeaderCtrl.navigate('about')">
                        <p>About me</p>
                    </md-list-item>
                    <md-divider ng-show="HeaderCtrl.currentUser"></md-divider>
                    <md-list-item ui-sref-active="active" ng-click="HeaderCtrl.navigate('admin')" ng-show="HeaderCtrl.currentUser">
                        <p>Admin</p>
                    </md-list-item>
                    <md-list-item ui-sref-active="active" ng-click="HeaderCtrl.navigate('logout')" ng-show="HeaderCtrl.currentUser">
                        <p>Logout</p>
                    </md-list-item>
                </md-list>
            </md-content>
        </md-sidenav>

        <!-- Mobile Nav -->
        <md-toolbar hide-gt-md class="mobile-header">
            <div class="md-toolbar-tools">
                <md-button class="md-icon-button" aria-label="Nav" ng-click="HeaderCtrl.toggleNav()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" viewBox="0 0 18 18" fit="" preserveAspectRatio="xMidYMid meet" style="pointer-events: none; display: block;">
                        <path d="M0 0h18v18h-18z" fill="none"></path>
                        <path fill="#FFF" d="M2 13.5h14v-1.5h-14v1.5zm0-4h14v-1.5h-14v1.5zm0-5.5v1.5h14v-1.5h-14z"></path>
                    </svg>
                </md-button>
                <h2>Gentry Riggen</h2>
                <span flex></span>
            </div>
        </md-toolbar>
    </div>
    

    <!-- Main Content -->
    <div flex layout="column" role="main">
        <md-content layout-padding class="ui-view-container">

            <!-- LOADING -->
            <div layout="row" layout-padding ng-show="alert.loading.show">
                <span flex></span>
                <div layout="column" flex="50" layout-align="center center">
                    <md-progress-circular class="md-accent" md-mode="indeterminate"></md-progress-circular>
                    <div style="margin-top: 10px;">{{alert.loading.message}}</div>
                </div>
                <span flex></span>
            </div>

            <div layout="row">
                <span flex></span>
                <ui-view flex-sm="100" flex-md="100" flex-lg="100" flex-gt-lg="80"  ng-hide="alert.loading.show"></ui-view>
                <span flex></span>
            </div>

        </md-content>
    </div>


    <!-- REQUIRED FOR ASP.NET MVC (NOT USED HERE) -->
    @RenderBody()
</body>
</html>
