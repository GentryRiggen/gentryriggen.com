{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "types": ["node", "jest"],
    "jsx": "react",
    "outDir": "build",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings",
      "./cypress/support"
    ],

    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
